<% provide(:title, 'Edit book') %>
<h1>Update book</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@book) do |f| %>
      <%= render 'shared/book_error_messages' %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.label :synopsis %>
      <%= f.text_area :synopsis %>

      <%= f.label :year %>
      <%= f.text_field :year %>
 
      <%= f.label :copies %>
      <%= f.text_field :copies %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
